<link rel="stylesheet" href="/css/adminProfile.css">
<script src="/js/adminProfile.js" defer></script>

<div class="admin-profile-container">
    <h2>My Profile</h2>

    <form id="adminProfileForm">
        <label>Name</label>
        <input type="text" name="name" value="<%= admin.name %>" required>

        <label>Mobile</label>
        <input type="text" value="<%= admin.mobile %>" readonly>

        <label>Email</label>
        <input type="email" value="<%= admin.email %>" readonly>

        <label>Aadhar</label>
        <input type="text" value="<%= admin.aadhar_number %>" readonly>

        <label>Gender</label>
        <input type="text" value="<%= admin.gender %>" readonly>

        <label>Birthdate</label>
        <input type="text" value="<%= admin.birthdate %>" readonly>

        <label>Address</label>
        <textarea name="address" rows="2"><%= admin.address %></textarea>

        <label>City</label>
        <input type="text" name="city" value="<%= admin.city %>">

        <label>Pincode</label>
        <input type="text" name="pincode" value="<%= admin.pincode %>">

        <button type="submit">Update Profile</button>
    </form>

    <button id="openPasswordModal" class="change-pass-btn">Change Password</button>

    <p id="adminProfileMsg"></p>
</div>

<!-- Password Change Modal -->
<div id="passwordModal" class="modal-overlay">
    <div class="modal">
        <h3>Change Password</h3>
        <form id="changePasswordForm">
            <input type="password" name="currentPassword" placeholder="Current Password" required>
            <input type="password" name="newPassword" placeholder="New Password" required>
            <input type="password" name="confirmNewPassword" placeholder="Confirm New Password" required>
            <button type="submit">Update Password</button>
            <button type="button" id="cancelPasswordModal">Cancel</button>
        </form>
        <p id="passwordMsg"></p>
    </div>
</div>